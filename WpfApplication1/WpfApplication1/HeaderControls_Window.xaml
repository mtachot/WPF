<Window x:Class="WpfApplication1.HeaderControls_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HeaderControls_Window" Height="300" Width="300">
    <StackPanel>
        <HeaderedContentControl x:Name="hccCat1" Header="Catégorie 1" Margin="10">
            <HeaderedContentControl.Content>
                Trucs, bidules et autres machins
            </HeaderedContentControl.Content>
        </HeaderedContentControl>
        <GroupBox x:Name="gpCat2" Header="Cat2" Margin="10">
            <GroupBox.Content>
                Machin, trucs et autres bidules de catégorie 2
            </GroupBox.Content>
        </GroupBox>
        <Expander x:Name="expCat3" Margin="10">
            <Expander.Content>
                Bidules, trucs et autres machins de catégorie 3
            </Expander.Content>
        </Expander>
    </StackPanel>
</Window>
