<Window x:Class="WpfApplication1.DynamicStyle_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="DynamicStyle_Window" Height="300" Width="300">
    <Grid x:Name="gridMain" Background="{DynamicResource backgroundWhite}">
        <Button x:Name="btnRed" Margin="106,10,106,240">
            <Button.Height>20</Button.Height>
            <Button.Width>80</Button.Width>
            <Button.Content>RED</Button.Content>
        </Button>
        <Button x:Name="btnGreen">
            <Button.Height>20</Button.Height>
            <Button.Width>80</Button.Width>
            <Button.Content>GREEN</Button.Content>
        </Button>
        <Button x:Name="btnPink" Margin="106,240,106,10">
            <Button.Height>20</Button.Height>
            <Button.Width>80</Button.Width>
            <Button.Content>PINK</Button.Content>
        </Button>
    </Grid>
</Window>
