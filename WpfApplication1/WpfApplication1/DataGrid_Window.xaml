<Window x:Class="WpfApplication1.DataGrid_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DataGrid_Window" Height="500" Width="500">
    <Grid>
        <DataGrid AutoGenerateColumns="False" Margin="10" x:Name="gridPersonne">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding IsMarried}" Header="Marié" />
                <DataGridTextColumn Binding="{Binding Prenom}" Header="Prénom" />
                <DataGridTextColumn Binding="{Binding Nom}" Header="Nom" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
